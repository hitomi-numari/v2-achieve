<%= form_for(@blog) do |f| %> 
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
      
      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% if @blog.confirming.blank? %>
  
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <br>
    <%= f.submit %>
  <% else %>
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @blog.title %></td>
      </tr>
      <tr>
        <th>本文</th>
        <td><%= @blog.content %></td>
      </tr>
    </table>
    
    <%= f.hidden_field :title %>
    <%= f.hidden_field :content %>
    <%= f.hidden_field :confirming %>
    <%= f.submit %>
  <% end %>
<% end %>

<%= link_to "ブログ一覧画面にもどる", blogs_path %>